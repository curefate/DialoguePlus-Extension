{
    "scopeName": "source.dp",
    "fileTypes": [
        ".dp"
    ],
    "name": "DialoguePlus",
    "patterns": [
        {
            "include": "#keywords"
        },
        {
            "include": "#import-paths"
        },
        {
            "include": "#label-names"
        },
        {
            "include": "#speaker-names"
        },
        {
            "include": "#tags"
        },
        {
            "include": "#operators"
        },
        {
            "include": "#literals"
        },
        {
            "include": "#strings"
        },
        {
            "include": "#comments"
        },
        {
            "include": "#call-functions"
        }
    ],
    "repository": {
        "keywords": {
            "patterns": [
                {
                    "name": "keyword.control.dp",
                    "match": "\\b(if|elif|else|not|and|or|call|import|label|jump|tour)\\b|->|-><|~"
                }
            ]
        },
        "import-paths": {
            "patterns": [
                {
                    "name": "string.unquoted.path.dp",
                    "match": "(?<=(import)\\s)[a-zA-Z0-9_./\\\\-]+"
                }
            ]
        },
        "label-names": {
            "patterns": [
                {
                    "name": "entity.name.label.dp",
                    "match": "(?<=(label|jump|tour)\\s)[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "speaker-names": {
            "patterns": [
                {
                    "name": "entity.name.speaker.dp",
                    "match": "^\\s*[a-zA-Z_][a-zA-Z0-9_]*(?=\\s*\")"
                }
            ]
        },
        "tags": {
            "patterns": [
                {
                    "name": "entity.name.tag.dp",
                    "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "operators": {
            "patterns": [
                {
                    "name": "keyword.operator.dp",
                    "match": "(\\+|\\-|\\*|/|%|=|==|!=|<=|>=|\\+=|\\-=|\\*=|/=|%=|&&|\\|\\||!|<|>|:|\\(|\\)|\\{|\\}|,)"
                }
            ]
        },
        "call-functions": {
            "patterns": [
                {
                    "name": "entity.name.function.dp",
                    "match": "(?<=call\\s)[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "literals": {
            "patterns": [
                {
                    "name": "constant.language.boolean.dp",
                    "match": "\\b(true|false)\\b"
                },
                {
                    "name": "constant.numeric.dp",
                    "match": "-?\\d+(\\.\\d+)?"
                },
                {
                    "name": "variable.other.dp",
                    "match": "\\$([a-zA-Z_][a-zA-Z0-9_]*.)?[a-zA-Z_][a-zA-Z0-9_]*"
                }
            ]
        },
        "strings": {
            "patterns": [
                {
                    "name": "string.quoted.double.dp",
                    "begin": "\"",
                    "end": "\"",
                    "patterns": [
                        {
                            "name": "constant.character.escape.dp",
                            "match": "\\\\([btnfr'\"\\\\]|{{|}})"
                        },
                        {
                            "name": "meta.embedded.dp",
                            "begin": "\\{",
                            "end": "\\}",
                            "patterns": [
                                {
                                    "name": "string.quoted.double.embedded.dp",
                                    "begin": "\"",
                                    "end": "\""
                                },
                                {
                                    "name": "meta.function-call.dp",
                                    "begin": "\\b(call)\\s+([a-zA-Z_][a-zA-Z0-9_]*)\\(",
                                    "end": "\\)",
                                    "beginCaptures": {
                                        "1": {
                                            "name": "keyword.control.dp"
                                        },
                                        "2": {
                                            "name": "entity.name.function.embedded.dp"
                                        }
                                    },
                                    "patterns": [
                                        {
                                            "include": "#keywords"
                                        },
                                        {
                                            "include": "#operators"
                                        },
                                        {
                                            "include": "#literals"
                                        }
                                    ]
                                },
                                {
                                    "include": "#keywords"
                                },
                                {
                                    "include": "#operators"
                                },
                                {
                                    "include": "#literals"
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        "comments": {
            "patterns": [
                {
                    "name": "comment.line.number-sign.dp",
                    "begin": "#",
                    "end": "$"
                }
            ]
        }
    }
}