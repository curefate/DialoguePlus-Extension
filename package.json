{
  "name": "dp-extension",
  "displayName": "DialoguePlus Extension",
  "publisher": "majulizi",
  "icon": "icon.png",
  "description": "",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/curefate/dialoguescripter-extension"
  },
  "main": "./out/lsp/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "dp",
        "aliases": [
          "DP script",
          "dp"
        ],
        "extensions": [
          ".dp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "dp",
        "scopeName": "source.dp",
        "path": "./syntaxes/dp.tmLanguage.json"
      }
    ]
  },
  "devDependencies": {
    "@types/node": "18.16.19",
    "@types/vscode": "1.102.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "vscode-languageclient": "7.0.0",
    "vscode-languageserver": "7.0.0",
    "vscode-languageserver-textdocument": "1.0.8",
    "vscode-uri": "^3.1.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build-server": "cd DPService && dotnet publish -c Release -o ../dp-service/win-x64",
    "build-win-x64": "cd DPService && dotnet publish -c Release -r win-x64 -o ../dp-service/win-x64",
    "build-linux-x64": "cd DPService && dotnet publish -c Release -r linux-x64 -o ../dp-service/linux-x64",
    "build-osx-x64": "cd DPService && dotnet publish -c Release -r osx-x64 -o ../dp-service/osx-x64",
    "build-osx-arm64": "cd DPService && dotnet publish -c Release -r osx-arm64 -o ../dp-service/osx-arm64",
    "build-all-platforms": "npm run build-win-x64 && npm run build-linux-x64 && npm run build-osx-x64 && npm run build-osx-arm64"
  }
}